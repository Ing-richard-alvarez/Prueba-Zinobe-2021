{% extends "layout/base.twig" %}

{% block head %}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Zinobe - Register</title>
    <script src="../public/dist/css/register.css"></script>
{% endblock head %}

{% block content %}
    <div class="row mt-3">
        <form id="register-form" class="col-12 col-md-6 mx-auto" novalidate onsubmit="javascript:void(0)" autocomplete="off">
            <div class="form-row">
                <div class="col-12">
                    <label for="name">Nombre*</label>
                    <input type="text" class="form-control" name="name" id="name" required>
                    <div class="invalid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="col-12">
                    <label for="document"># Documento*</label>
                    <input type="text" class="form-control" name="document" id="document" required>
                    <small class="form-text text-muted">Este campo es numérico (ejemplo: 1234567890)</small>
                    <div class="invalid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="col-12">
                    <label for="email">Email*</label>
                    <input type="email" class="form-control" name="email" id="email" required>
                    <div class="invalid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="col-12">
                    <label for="country">País*</label>
                    <select class="form-control" name="country" id="country">
                        <option value="">Seleccione una opción</option>
                    </select>
                    <div class="invalid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="col-12">
                    <label for="password">Contraseña*</label>
                    <input type="password" class="form-control" name="password" id="password" required>
                    <small class="form-text text-muted">Este campo debe tener mínimo 6 caracteres</small>
                    <div class="invalid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="col-12">
                    <label for="confirm-password">Confirmar Contraseña*</label>
                    <input type="password" class="form-control" name="confirm-password" id="confirm-password" required>
                    <small class="form-text text-muted">Este campo debe tener mínimo 6 caracteres</small>
                    <div class="invalid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="form-row mt-3">
                <div class="col-12">
                    <button id="btn-register-submit" type="button" class="btn btn-primary" style="height: 41px;">
                        <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                        <strong class="mx-auto" style="letter-spacing: 0.5px;">Regístrate</strong>
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock content %}

{% block scripts %}
    <script src="../public/dist/js/register.js"></script>
{% endblock scripts %}
